page {
    color: #666;
    padding: 10rpx;
}


/* 导航菜单 */

.tab {
    height: calc(100vh - 220rpx);
}

.nav {
    height: 100rpx;
}

.scroll-container {
    white-space: nowrap;
    position: relative;
    padding: 5rpx 0;
}

.scroll-item {
    display: inline-block;
    font-size: 30rpx;
    transition: color .3s ease;
    padding: 20rpx 45rpx;
}

.scroll-item.active {
    color: #de688b;
}

.line {
    position: absolute;
    height: 5rpx;
    background: #de688b;
    bottom: 0;
    transition: all .5s;
}


/* 轮播图 */

.slides {
    margin-top: 10rpx;
}

.slides swiper {
    height: 220rpx;
}

.slides navigator {
    width: 100%;
    height: 100%;
}

.slides image {
    width: 100%;
    height: 100%;
}


/* 视频区域 */

.videos {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 5rpx;
}

.video-item {
    width: 48%;
    margin-bottom: 20rpx;
}

.image-container {
    position: relative;
}

.video-info {
    position: absolute;
    left: 0;
    bottom: 10rpx;
    justify-content: space-between;
    display: flex;
    width: 100%;
    color: #fff;
    font-size: 24rpx;
}

.video-info view {
    display: flex;
    align-items: center;
    margin: 0 15rpx;
}

.video-info image {
    width: 24rpx;
    padding-right: 8rpx;
}

.videos .video-title {
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-break: break-word;
    /* 文字最多几行 */
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}